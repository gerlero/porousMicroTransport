{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build and install",
            "command": "./Allwmake",
            "args": [
                "-j"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Clean build",
            "command": "./Allwclean",
            "group": "build"
        }
    ]
}